# Editor settings
export EDITOR="nvim"
export SUDO_EDITOR="nvim"
export VISUAL="nvim"

# PAGER settings
export PAGER="nvim +Man!"

# term
# export TERM=xterm-kitty
export TERM=xterm-256color

#sudo
export SUDO_PROMPT="$(tput setab 1 setaf 7 bold)[sudo]$(tput sgr0) password for %p: "

# Go
export GOPATH="$HOME/.local/share/go"

# Localization settings for output and error messages
#export LC_ALL=C

# Path settings
export PATH="$HOME/.local/bin:$PATH"

# Qt theme settings
# export QT_STYLE_OVERRIDE="gtk2"
export QT_QPA_PLATFORMTHEME=qt6ct

# ssh-agent settings
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# Say how long a command took, if it took more than 10 seconds
export REPORTTIME=10

# templates directory
export TPL_TEMPLATE_DIR="$HOME/dotfiles/templates"

# FZF default
export FZF_DEFAULT_OPTS="--layout=reverse --exact --border=bold --border=rounded --margin=3% --color=fg:#D8DEE9 --color=bg:#2E3440 --color=hl:#88C0D0 --color=fg+:#ECEFF4 --color=bg+:#3B4252 --color=hl+:#8FBCBB --color=info:#81A1C1 --color=prompt:#81A1C1 --color=pointer:#BF616A --color=marker:#A3BE8C --color=spinner:#B48EAD --color=header:#88C0D0 --color=border:#4C566A --color=query:#ECEFF4"
